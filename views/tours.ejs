<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tours</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header', { title: 'Welcome to ANL Live Concert Management System!' }) %>
    <%- include('partials/nav') %>
    <div class="container">
        <h2>List of Tours</h2>
            <table>
                <thead>
                    <tr>
                        <th>Tour ID</th>
                        <th>Tour Name</th>
                        <th>Artist Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Total Concerts</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% tours.forEach(row => { %>
                        <tr>
                            <td><%= row.tourID %></td>
                            <td><%= row.tourName %></td>
                            <td><%= row.artistName %></td>
                            <td><%= row.tourStartDate %></td>
                            <td><%= row.tourEndDate %></td>
                            <td><%= row.concertTotal %></td>
                            <td><a href="/tours">Edit</a></td>
                            <td><a href="/tours">Delete</a></td>
                        </tr>

                    <% }) %>
                </tbody>
            </table>

        <h3>Add Tour</h3>
        <form action="/tour">
            <label for="tourName">Tour Name:</label>
            <input type="text" id="tourName" name="tourName" placeholder="Enter tour name" required><br>
    
            <label for="artistName">Artist Name:</label>
            <input type="text" id="artistName" name="artistName" placeholder="Enter artist name" required><br>

            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required><br>

            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required><br>

            <label for="totalConcerts">Total Concerts:</label>
            <input type="number" id="totalConcerts" name="totalConcerts" placeholder="Enter total number of concerts" required><br>

            <input type="submit" value="Add Tour">
        </form>

        <h3>Update Tour</h3>
        <form action="/tour">
            <label for="tourName">Tour Name:</label>
            <input type="text" id="tourName" name="tourName" placeholder="Enter tour name" required><br>
    
            <label for="artistName">Artist Name:</label>
            <input type="text" id="artistName" name="artistName" placeholder="Enter artist name" required><br>

            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required><br>

            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required><br>

            <label for="totalConcerts">Total Concerts:</label>
            <input type="number" id="totalConcerts" name="totalConcerts" placeholder="Enter total number of concerts" required><br>

            <input type="submit" value="Edit Tour">
        </form>

        <h3>Delete Tour</h3>
        <form action="/tour">
            <label for="tourName">Tour Name:</label>
            <input type="text" id="tourName" name="tourName" placeholder="Enter tour name" required><br>
    
            <label for="artistName">Artist Name:</label>
            <input type="text" id="artistName" name="artistName" placeholder="Enter artist name" required><br>

            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required><br>

            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required><br>

            <label for="totalConcerts">Total Concerts:</label>
            <input type="number" id="totalConcerts" name="totalConcerts" placeholder="Enter total number of concerts" required><br>

            <input type="submit" value="Delete Tour">
        </form>
    </div>
</body>
</html>